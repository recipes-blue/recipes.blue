{
  "lexicon": 1,
  "id": "blue.recipes.feed.getRecipe",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets a recipe from the index by author DID and rkey.",
      "parameters": {
        "type": "params",
        "required": ["did", "rkey"],
        "properties": {
          "did": {
            "type": "string",
            "format": "at-identifier"
          },
          "rkey": {
            "type": "string"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["recipe"],
          "properties": {
            "recipe": {
              "type": "ref",
              "ref": "#result"
            }
          }
        }
      }
    },
    "result": {
      "type": "object",
      "required": ["author", "title", "ingredients", "steps"],
      "properties": {
        "author": { "type": "ref", "ref": "blue.recipes.feed.defs#authorInfo" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "time": { "type": "integer" },
        "imageUrl": { "type": "string" },
        "ingredients": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "blue.recipes.feed.defs#ingredient"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "blue.recipes.feed.defs#step"
          }
        }
      }
    }
  }
}
