{
  "lexicon": 1,
  "id": "blue.recipes.feed.getRecipes",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets recipes from the index.",
      "parameters": {
        "type": "params",
        "required": ["cursor"],
        "properties": {
          "cursor": {
            "type": "string"
          },
          "did": {
            "type": "string",
            "format": "at-identifier"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["recipes"],
          "properties": {
            "author": {
              "type": "ref",
              "ref": "blue.recipes.feed.defs#authorInfo"
            },
            "recipes": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#result"
              }
            }
          }
        }
      }
    },
    "result": {
      "type": "object",
      "required": [ "rkey", "author", "title", "time", "ingredients", "steps"],
      "properties": {
        "rkey": { "type": "string" },
        "author": { "type": "ref", "ref": "blue.recipes.feed.defs#authorInfo" },
        "type": { "type": "string" },
        "title": { "type": "string" },
        "time": { "type": "integer" },
        "description": { "type": "string" },
        "ingredients": { "type": "integer" },
        "steps": { "type": "integer" }
      }
    }
  }
}
